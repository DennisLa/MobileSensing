<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="#0099cc"
tools:context="de.dennis.mobilesensing.UI.LocationDescriptionActivity">
    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:id="@+id/map_container">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/locationDescMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".UI.LocationDescriptionActivity">
            </fragment>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:textSize="30dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="20dp"
                android:id="@+id/title"
                android:textColor="@color/colorPrimaryDark"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description "
                android:textSize="20dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/title"
                android:id="@+id/description"
            />

            <Button
                android:id="@+id/btnChatOpen"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:background="@drawable/roundbutton"
                android:text="  Chat Ã–ffenen"
                android:textColor="#fff"
                android:gravity="left|center"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@android:drawable/stat_notify_chat"
                android:paddingLeft="110dp"
                />

            <Button
                android:id="@+id/btnStartNav"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnChatOpen"
                android:background="@drawable/roundbutton"
                android:text="  Navigation Starten"
                android:textColor="#fff"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:gravity="left|center"
                android:drawableLeft="@android:drawable/ic_dialog_map"
                android:paddingLeft="80dp"
                />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>