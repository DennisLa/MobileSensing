<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="de.dennis.mobilesensing.UI.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/registerLogo"
                android:layout_width="380dp"
                android:layout_height="75dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/register" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/registerLabel"
                android:text="Register"
                android:textSize="24dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="11dp"
                android:layout_below="@id/registerLogo"
                />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="11dp"
                android:layout_below="@id/registerLabel"
                android:ems="10"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Passwort"
                android:ems="10"
                android:layout_below="@+id/txtEmail"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="21dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColorLink="@color/colorPrimaryDark"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Passwort wiederholen"
                android:ems="10"
                android:id="@+id/txtPasswordRepeat"
                android:layout_below="@+id/txtPassword"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginTop="21dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="Nutzername"
                android:id="@+id/txtSurname"
                android:layout_below="@+id/txtPasswordRepeat"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="21dp"
                android:backgroundTint="@color/colorPrimaryDark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Geburtsdatum"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="21dp"
                android:id="@+id/textView15"
                android:textStyle="bold"
                android:layout_below="@+id/txtSurname"/>

            <TextView
                android:id="@+id/txtBirthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_marginStart="21dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="MM.DD.YYYY"
                android:backgroundTint="@color/colorPrimaryDark"
                android:inputType="none"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Geschlecht"
                android:id="@+id/txtGender"
                android:textStyle="bold"
                android:layout_below="@+id/txtBirthdate"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="11dp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerGender"
                android:layout_below="@+id/txtGender"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="15dp"/>


            <Button
                android:id="@+id/btnCommitRegister"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="27dp"
                android:background="@drawable/roundbutton"
                android:text="Registrieren"
                android:layout_below="@+id/spinnerGender"
                android:textColor="#fff"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
